@model StocksApp.Templates.Models.StockHistoryInfo
<html>
    <head>
        <style>
            table, th, td {
                border: 1px solid black;
            }
        </style>
    </head>
    <body>
        <h3>
            @Model.Ticker Stocks History by date range from @(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "not selected") to @(Model.StartDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "not selected")
        </h3>
        <table style="width:100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Open</th>
                    <th>Close</th>
                    <th>High</th>
                    <th>Low</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stockHistory in Model.StockHistoryItems)
                {
                    <tr>
                        <td>@stockHistory.Date.ToString("yyyy-MM-dd")</td>
                        <td>@stockHistory.Open</td>
                        <td>@stockHistory.Close</td>
                        <td>@stockHistory.High</td>
                        <td>@stockHistory.Low</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>